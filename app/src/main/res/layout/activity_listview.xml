<?xml version="1.0" encoding="utf-8"?>
<com.example.pullrefreshlayout.refresh.PullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refres_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/refresh_head" />

    <com.example.pullrefreshlayout.refresh.PullableListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#666666"
        android:dividerHeight="1dp" />

    <include layout="@layout/refresh_footer" />
</com.example.pullrefreshlayout.refresh.PullToRefreshLayout>